---
interface Props {
  title: string;
  subtitle?: string;
  heroImage?: string;
  heroAlt?: string;
  centered?: boolean;
}

const { 
  title, 
  subtitle, 
  heroImage,
  heroAlt = '',
  centered = true 
} = Astro.props;
---

<header class={`page-header ${heroImage ? 'has-hero' : ''} ${centered ? 'centered' : ''}`}>
  {heroImage && (
    <div class="hero-image">
      <img src={heroImage} alt={heroAlt} loading="eager" />
      <div class="hero-overlay"></div>
    </div>
  )}
  <div class="header-content">
    <h1 class="page-title">{title}</h1>
    {subtitle && <p class="page-subtitle">{subtitle}</p>}
    <slot />
  </div>
</header>

<style>
  .page-header {
    position: relative;
    padding: var(--space-3xl) var(--space-lg);
    margin-bottom: var(--space-2xl);
  }
  
  .page-header.centered {
    text-align: center;
  }
  
  .page-header.has-hero {
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
  }
  
  .hero-image {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  
  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
  }
  
  .header-content {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 600;
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.2;
  }
  
  .page-header:not(.has-hero) .page-title {
    color: var(--charcoal);
  }
  
  .page-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    margin: 0;
    line-height: 1.5;
    opacity: 0.9;
  }
  
  .page-header:not(.has-hero) .page-subtitle {
    color: var(--warm-gray);
  }
  
  /* Accent underline for non-hero headers */
  .page-header:not(.has-hero).centered .page-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 3px;
    background: var(--sage);
    margin: var(--space-md) auto 0;
    border-radius: 2px;
  }
  
  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-2xl) var(--space-md);
    }
    
    .page-header.has-hero {
      min-height: 250px;
    }
  }
</style>
