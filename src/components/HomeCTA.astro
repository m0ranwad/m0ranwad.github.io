---
interface Props {
  title: string;
  description: string;
  primaryLink: string;
  primaryText: string;
  secondaryLink: string;
  secondaryText: string;
}

const { title, description, primaryLink, primaryText, secondaryLink, secondaryText } = Astro.props;
---

<section class="home-cta">
  <div class="cta-content">
    <h2>{title}</h2>
    <p>{description}</p>
    <div class="cta-buttons">
      <a href={primaryLink} class="btn-light">{primaryText}</a>
      <a href={secondaryLink} class="btn-outline-light">{secondaryText}</a>
    </div>
  </div>
</section>

<style>
  .home-cta {
    background: linear-gradient(135deg, var(--sage) 0%, #607A4D 100%);
    padding: var(--space-3xl) var(--space-lg);
    text-align: center;
    margin-top: var(--space-2xl);
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .home-cta h2 {
    color: var(--white);
    margin-bottom: var(--space-md);
  }
  
  .home-cta p {
    color: var(--white);
    opacity: 0.9;
    margin-bottom: var(--space-xl);
    max-width: none;
  }
  
  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }
  
  @media (max-width: 480px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-buttons a {
      width: 100%;
      max-width: 280px;
      text-align: center;
    }
  }
</style>
