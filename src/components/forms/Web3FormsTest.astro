---
/**
 * Web3Forms Test Component
 * 
 * A simple form to test that Web3Forms is configured correctly.
 * Remove this component after testing.
 */
import { formConfig, isFormConfigured } from '../../config/forms';

const isConfigured = isFormConfigured();
---

<div class="test-form-container">
  {!isConfigured ? (
    <div class="config-warning">
      <h3>⚠️ Web3Forms Not Configured</h3>
      <p>To enable form submissions:</p>
      <ol>
        <li>Go to <a href="https://web3forms.com/" target="_blank">web3forms.com</a></li>
        <li>Enter your email and click "Create Access Key"</li>
        <li>Check your email for the access key</li>
        <li>Add it to <code>src/config/forms.ts</code></li>
      </ol>
    </div>
  ) : (
    <form 
      action="https://api.web3forms.com/submit" 
      method="POST"
      class="test-form"
    >
      <input type="hidden" name="access_key" value={formConfig.web3formsAccessKey} />
      <input type="hidden" name="subject" value="Test Form Submission" />
      <input type="hidden" name="redirect" value={formConfig.thankYouPage} />
      
      {/* Honeypot field for spam protection */}
      <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />
      
      <div class="form-group">
        <label for="test-name">Name</label>
        <input type="text" id="test-name" name="name" required />
      </div>
      
      <div class="form-group">
        <label for="test-email">Email</label>
        <input type="email" id="test-email" name="email" required />
      </div>
      
      <div class="form-group">
        <label for="test-message">Message</label>
        <textarea id="test-message" name="message" rows="3" required></textarea>
      </div>
      
      <button type="submit" class="submit-btn">Send Test</button>
    </form>
  )}
</div>

<style>
  .test-form-container {
    max-width: 500px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--white);
    border-radius: 16px;
    box-shadow: var(--shadow-soft);
  }
  
  .config-warning {
    background: #FEF3CD;
    border: 1px solid #FFEEBA;
    border-radius: 8px;
    padding: 1.5rem;
  }
  
  .config-warning h3 {
    margin-top: 0;
    color: #856404;
  }
  
  .config-warning ol {
    margin-bottom: 0;
    padding-left: 1.5rem;
  }
  
  .config-warning code {
    background: rgba(0,0,0,0.1);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }
  
  .test-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group label {
    font-weight: 500;
    color: var(--charcoal);
  }
  
  .form-group input,
  .form-group textarea {
    padding: 0.75rem;
    border: 2px solid var(--sage-light);
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.2s;
  }
  
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--sage);
  }
  
  .submit-btn {
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, var(--sage) 0%, var(--sage-dark) 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(143, 163, 120, 0.4);
  }
</style>
