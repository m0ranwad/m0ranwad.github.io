---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description = "Thymeless Treats Bakery - Handcrafted seasonal baked goods" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title} | Thymeless Treats Bakery</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&family=Caveat:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <header class="site-header">
      <nav class="navbar">
        <a href="/" class="nav-brand">Thymeless Treats</a>
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span class="hamburger"></span>
        </button>
        <ul class="nav-links">
          <li><a href="/valentines/">Order</a></li>
          <li><a href="/holidays/">Menus</a></li>
          <li><a href="/gallery/">Gallery</a></li>
          <li><a href="/contact/">Contact</a></li>
        </ul>
      </nav>
    </header>
    
    <main id="main-content">
      {subtitle && (
        <div class="page-header">
          <h1>{title}</h1>
          <p class="subtitle">{subtitle}</p>
        </div>
      )}
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="footer-content">
        <p class="footer-brand">Thymeless Treats Bakery</p>
        <p class="footer-tagline">Where Every Bite is Timelessly Delicious!</p>
        <div class="footer-links">
          <a href="/contact/">Contact</a>
          <a href="/about/">About</a>
          <a href="/gallery/">Gallery</a>
        </div>
        <p class="footer-copyright">&copy; {new Date().getFullYear()} Thymeless Treats Bakery</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
/* ============================================
   THYMELESS TREATS BAKERY - ASTRO VERSION
   Migrated from optimized-2025.css
   ============================================ */

:root {
  /* Refined Color Palette - Warmer, More Inviting */
  --cream: #FBF8F3;
  --sage: #8FA378;
  --warm-gray: #6B6B63;
  --charcoal: #2C2C2C;
  --terracotta: #D4806F;
  --white: #FFFFFF;
  --light-sage: #E8EFE3;
  --accent-gold: #D4A574;
  
  /* Shadows */
  --shadow-subtle: 0 2px 8px rgba(0, 0, 0, 0.06);
  --shadow-soft: 0 4px 16px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 8px 24px rgba(0, 0, 0, 0.12);
  --shadow-strong: 0 16px 40px rgba(0, 0, 0, 0.16);
  
  /* Transitions */
  --transition-fast: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-smooth: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-gentle: 500ms cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Spacing */
  --space-xs: 0.5rem;
  --space-sm: 0.75rem;
  --space-md: 1rem;
  --space-lg: 1.5rem;
  --space-xl: 2rem;
  --space-2xl: 3rem;
  --space-3xl: 4rem;
  --space-4xl: 6rem;
}

/* Reset */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Typography */
body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 16px;
  line-height: 1.7;
  color: var(--warm-gray);
  background-color: var(--cream);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Cormorant Garamond', Georgia, serif;
  color: var(--charcoal);
  font-weight: 600;
  line-height: 1.2;
  letter-spacing: -0.02em;
  margin: 0 0 var(--space-lg) 0;
}

h1 { font-size: clamp(2.5rem, 5vw, 4rem); font-weight: 700; }
h2 { font-size: clamp(2rem, 4vw, 3rem); }
h3 { font-size: clamp(1.5rem, 3vw, 2rem); }

p {
  margin: 0 0 var(--space-lg) 0;
  font-size: 1.0625rem;
  line-height: 1.7;
  max-width: 70ch;
}

a {
  color: var(--sage);
  text-decoration: none;
  transition: all var(--transition-fast);
}

a:hover {
  color: #7A8F6A;
}

img {
  max-width: 100%;
  height: auto;
}

/* Skip Link */
.skip-link {
  position: absolute;
  top: -40px;
  left: 0;
  background: var(--sage);
  color: white;
  padding: 8px 16px;
  z-index: 1000;
  transition: top 0.3s;
}

.skip-link:focus {
  top: 0;
}

/* Navigation */
.site-header {
  background: var(--white);
  box-shadow: var(--shadow-subtle);
  position: sticky;
  top: 0;
  z-index: 100;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--space-md) var(--space-lg);
}

.nav-brand {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--charcoal);
}

.nav-brand:hover {
  color: var(--sage);
}

.nav-links {
  display: flex;
  list-style: none;
  gap: var(--space-xl);
}

.nav-links a {
  color: var(--charcoal);
  font-weight: 500;
  padding: var(--space-sm) var(--space-md);
  border-radius: 4px;
  transition: all var(--transition-fast);
}

.nav-links a:hover {
  background: var(--light-sage);
  color: var(--sage);
}

.nav-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--space-sm);
}

.hamburger {
  display: block;
  width: 24px;
  height: 2px;
  background: var(--charcoal);
  position: relative;
}

.hamburger::before,
.hamburger::after {
  content: '';
  position: absolute;
  width: 24px;
  height: 2px;
  background: var(--charcoal);
  left: 0;
}

.hamburger::before { top: -8px; }
.hamburger::after { bottom: -8px; }

/* Footer */
.site-footer {
  background: var(--charcoal);
  color: var(--cream);
  padding: var(--space-3xl) var(--space-lg);
  margin-top: var(--space-4xl);
}

.footer-content {
  max-width: 1200px;
  margin: 0 auto;
  text-align: center;
}

.footer-brand {
  font-family: 'Cormorant Garamond', Georgia, serif;
  font-size: 1.75rem;
  font-weight: 700;
  margin-bottom: var(--space-sm);
  color: var(--cream);
}

.footer-tagline {
  font-family: 'Caveat', cursive;
  font-size: 1.25rem;
  color: var(--sage);
  margin-bottom: var(--space-lg);
}

.footer-links {
  display: flex;
  justify-content: center;
  gap: var(--space-xl);
  margin-bottom: var(--space-lg);
}

.footer-links a {
  color: var(--cream);
  opacity: 0.8;
}

.footer-links a:hover {
  opacity: 1;
  color: var(--sage);
}

.footer-copyright {
  font-size: 0.875rem;
  opacity: 0.6;
}

/* Page Header */
.page-header {
  text-align: center;
  padding: var(--space-3xl) var(--space-lg);
  background: linear-gradient(135deg, var(--light-sage) 0%, var(--cream) 100%);
}

.page-header .subtitle {
  font-family: 'Caveat', cursive;
  font-size: 1.5rem;
  color: var(--sage);
  max-width: none;
}

/* Buttons */
.btn-primary {
  display: inline-block;
  background: linear-gradient(135deg, var(--sage) 0%, #607A4D 100%);
  color: var(--white);
  padding: var(--space-md) var(--space-xl);
  border-radius: 8px;
  font-weight: 600;
  font-size: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all var(--transition-smooth);
  border: none;
  cursor: pointer;
  min-height: 44px;
  min-width: 44px;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-medium);
  color: var(--white);
}

.btn-light {
  display: inline-block;
  background: var(--white);
  color: var(--charcoal);
  padding: var(--space-md) var(--space-xl);
  border-radius: 8px;
  font-weight: 600;
  border: 2px solid var(--white);
  transition: all var(--transition-smooth);
}

.btn-light:hover {
  background: transparent;
  color: var(--white);
}

.btn-outline-light {
  display: inline-block;
  background: transparent;
  color: var(--white);
  padding: var(--space-md) var(--space-xl);
  border-radius: 8px;
  font-weight: 600;
  border: 2px solid var(--white);
  transition: all var(--transition-smooth);
}

.btn-outline-light:hover {
  background: var(--white);
  color: var(--charcoal);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .nav-toggle {
    display: block;
  }
  
  .nav-links {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--white);
    flex-direction: column;
    padding: var(--space-lg);
    gap: var(--space-md);
    box-shadow: var(--shadow-soft);
  }
  
  .nav-links.active {
    display: flex;
  }
  
  .nav-links a {
    padding: var(--space-md);
    min-height: 44px;
    display: flex;
    align-items: center;
  }
}
</style>
