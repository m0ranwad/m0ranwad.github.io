---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  fullWidth?: boolean;
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href,
  fullWidth = false,
  class: className = ''
} = Astro.props;

const Tag = href ? 'a' : 'button';
const classes = `btn btn-${variant} btn-${size} ${fullWidth ? 'btn-full' : ''} ${className}`.trim();
---

<Tag href={href} class={classes}>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-family: var(--font-body);
    font-weight: 500;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-smooth);
    min-height: 44px; /* Touch target */
  }
  
  .btn:focus-visible {
    outline: 2px solid var(--sage);
    outline-offset: 2px;
  }
  
  /* Sizes */
  .btn-sm {
    padding: var(--space-xs) var(--space-md);
    font-size: 0.875rem;
  }
  
  .btn-md {
    padding: var(--space-sm) var(--space-lg);
    font-size: 1rem;
  }
  
  .btn-lg {
    padding: var(--space-md) var(--space-xl);
    font-size: 1.125rem;
  }
  
  /* Variants */
  .btn-primary {
    background: linear-gradient(135deg, var(--sage) 0%, var(--sage-dark) 100%);
    color: var(--white);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(143, 163, 120, 0.4);
  }
  
  .btn-secondary {
    background: var(--white);
    color: var(--sage-dark);
    border: 2px solid var(--sage);
  }
  
  .btn-secondary:hover {
    background: var(--sage-light);
  }
  
  .btn-outline {
    background: transparent;
    color: var(--sage-dark);
    border: 2px solid var(--sage);
  }
  
  .btn-outline:hover {
    background: var(--sage);
    color: var(--white);
  }
  
  /* Full width */
  .btn-full {
    width: 100%;
  }
</style>
