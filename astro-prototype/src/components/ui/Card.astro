---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const { 
  variant = 'default', 
  padding = 'md',
  href,
  class: className = ''
} = Astro.props;

const Tag = href ? 'a' : 'div';
const classes = `card card-${variant} card-pad-${padding} ${href ? 'card-link' : ''} ${className}`.trim();
---

<Tag href={href} class={classes}>
  <slot name="image" />
  <div class="card-body">
    <slot name="icon" />
    <slot name="title" />
    <slot name="description" />
    <slot name="action" />
    <slot />
  </div>
</Tag>

<style>
  .card {
    background: var(--white);
    border-radius: 16px;
    overflow: hidden;
    transition: all var(--transition-smooth);
  }
  
  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .card-link:hover {
    transform: translateY(-4px);
  }
  
  /* Variants */
  .card-default {
    box-shadow: var(--shadow-soft);
  }
  
  .card-default:hover {
    box-shadow: var(--shadow-medium);
  }
  
  .card-elevated {
    box-shadow: var(--shadow-medium);
  }
  
  .card-elevated:hover {
    box-shadow: var(--shadow-heavy);
  }
  
  .card-outlined {
    border: 2px solid var(--sage-light);
    box-shadow: none;
  }
  
  .card-outlined:hover {
    border-color: var(--sage);
  }
  
  /* Padding */
  .card-body {
    display: flex;
    flex-direction: column;
  }
  
  .card-pad-sm .card-body {
    padding: var(--space-md);
  }
  
  .card-pad-md .card-body {
    padding: var(--space-lg);
  }
  
  .card-pad-lg .card-body {
    padding: var(--space-xl);
  }
  
  /* Slot styling */
  .card :global([slot="icon"]) {
    font-size: 2rem;
    margin-bottom: var(--space-sm);
  }
  
  .card :global([slot="title"]) {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--charcoal);
    margin: 0 0 var(--space-sm) 0;
  }
  
  .card :global([slot="description"]) {
    color: var(--warm-gray);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 var(--space-md) 0;
  }
  
  .card :global([slot="action"]) {
    margin-top: auto;
  }
  
  .card :global([slot="image"]) {
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }
  
  .card :global([slot="image"] img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-smooth);
  }
  
  .card-link:hover :global([slot="image"] img) {
    transform: scale(1.05);
  }
</style>
