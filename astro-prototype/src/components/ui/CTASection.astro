---
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle?: string;
  primaryText?: string;
  primaryHref?: string;
  secondaryText?: string;
  secondaryHref?: string;
  variant?: 'sage' | 'cream' | 'white';
}

const { 
  title, 
  subtitle,
  primaryText,
  primaryHref,
  secondaryText,
  secondaryHref,
  variant = 'sage'
} = Astro.props;
---

<section class={`cta-section cta-${variant}`}>
  <div class="cta-content">
    <h2 class="cta-title">{title}</h2>
    {subtitle && <p class="cta-subtitle">{subtitle}</p>}
    <slot />
    {(primaryText || secondaryText) && (
      <div class="cta-buttons">
        {primaryText && primaryHref && (
          <Button 
            href={primaryHref} 
            variant={variant === 'sage' ? 'secondary' : 'primary'}
            size="lg"
          >
            {primaryText}
          </Button>
        )}
        {secondaryText && secondaryHref && (
          <Button 
            href={secondaryHref} 
            variant="outline"
            size="lg"
          >
            {secondaryText}
          </Button>
        )}
      </div>
    )}
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-3xl) var(--space-lg);
    text-align: center;
  }
  
  .cta-sage {
    background: linear-gradient(135deg, var(--sage) 0%, var(--sage-dark) 100%);
    color: var(--white);
  }
  
  .cta-cream {
    background: var(--cream);
  }
  
  .cta-white {
    background: var(--white);
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-title {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    font-weight: 600;
    margin: 0 0 var(--space-md) 0;
    line-height: 1.3;
  }
  
  .cta-cream .cta-title,
  .cta-white .cta-title {
    color: var(--charcoal);
  }
  
  .cta-subtitle {
    font-size: 1.1rem;
    margin: 0 0 var(--space-xl) 0;
    opacity: 0.9;
    line-height: 1.6;
  }
  
  .cta-cream .cta-subtitle,
  .cta-white .cta-subtitle {
    color: var(--warm-gray);
  }
  
  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
  }
  
  @media (max-width: 480px) {
    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>
