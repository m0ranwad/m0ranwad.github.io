---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Card {
  title: string;
  description: string;
  image: ImageMetadata | string;
  link: string;
  linkText: string;
}

interface Props {
  cards: Card[];
}

const { cards } = Astro.props;
---

<div class="category-cards">
  {cards.map((card) => {
    const isOptimized = typeof card.image !== 'string';
    return (
      <div class="category-card">
        <a href={card.link}>
          <div class="card-img-wrapper">
            {isOptimized ? (
              <Image 
                src={card.image} 
                alt={card.title} 
                class="card-img" 
                loading="lazy"
                format="webp"
                quality={80}
                widths={[300, 600]}
                sizes="(max-width: 768px) 100vw, 300px"
              />
            ) : (
              <img src={card.image} alt={card.title} class="card-img" loading="lazy" />
            )}
          </div>
          <div class="card-content">
            <h3>{card.title}</h3>
            <p class="card-description">{card.description}</p>
            <span class="card-link">{card.linkText}</span>
          </div>
        </a>
      </div>
    );
  })}
</div>

<style>
  .category-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .category-card {
    background: var(--white);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow-soft);
    transition: all var(--transition-smooth);
  }
  
  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
  }
  
  .category-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .card-img-wrapper {
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }
  
  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-smooth);
  }
  
  .category-card:hover .card-img {
    transform: scale(1.05);
  }
  
  .card-content {
    padding: var(--space-lg);
    text-align: left;
  }
  
  .card-content h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
    color: var(--charcoal);
  }
  
  .card-description {
    color: var(--warm-gray);
    font-size: 0.9375rem;
    margin-bottom: var(--space-md);
    line-height: 1.5;
  }
  
  .card-link {
    color: var(--sage);
    font-weight: 600;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }
  
  .category-card:hover .card-link {
    color: #7A8F6A;
  }
  
  @media (max-width: 600px) {
    .category-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
