---
interface FooterLink {
  label: string;
  href: string;
}

interface Props {
  links?: FooterLink[];
}

const { links = [
  { label: 'Contact', href: '/contact/' },
  { label: 'About', href: '/about/' },
  { label: 'Gallery', href: '/gallery/' },
]} = Astro.props;

const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-content">
    <p class="footer-brand">Thymeless Treats Bakery</p>
    <p class="footer-tagline">Where Every Bite is Timelessly Delicious!</p>
    <nav class="footer-links" aria-label="Footer navigation">
      {links.map(link => (
        <a href={link.href}>{link.label}</a>
      ))}
    </nav>
    <p class="footer-copyright">&copy; {year} Thymeless Treats Bakery</p>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--charcoal);
    color: var(--cream);
    padding: var(--space-3xl) var(--space-lg);
    margin-top: var(--space-4xl);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .footer-brand {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--space-sm);
    color: var(--cream);
    max-width: none;
  }

  .footer-tagline {
    font-family: var(--font-accent);
    font-size: 1.25rem;
    color: var(--sage);
    margin-bottom: var(--space-lg);
    max-width: none;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--space-xl);
    margin-bottom: var(--space-lg);
  }

  .footer-links a {
    color: var(--cream);
    opacity: 0.8;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--sage);
  }

  .footer-copyright {
    font-size: 0.875rem;
    opacity: 0.6;
    margin: 0;
    max-width: none;
  }
  
  @media (max-width: 480px) {
    .footer-links {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>
