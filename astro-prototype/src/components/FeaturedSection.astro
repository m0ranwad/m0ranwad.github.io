---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  menuLink: string;
  menuImage: ImageMetadata | string;
  menuAlt: string;
  ctaText: string;
}

const { title, menuLink, menuImage, menuAlt, ctaText } = Astro.props;

// Check if we have an optimized image (ImageMetadata) or a URL string
const isOptimized = typeof menuImage !== 'string';
---

<section class="featured-section">
  <h2>{title}</h2>
  <div class="featured-menu-container">
    <a href={menuLink} class="featured-menu-link">
      {isOptimized ? (
        <Image 
          src={menuImage} 
          alt={menuAlt} 
          loading="eager"
          format="webp"
          quality={85}
          widths={[400, 800, 1200]}
          sizes="(max-width: 768px) 100vw, 800px"
        />
      ) : (
        <img src={menuImage} alt={menuAlt} loading="eager" />
      )}
    </a>
    <a href={menuLink} class="btn-primary featured-cta">
      {ctaText}
    </a>
  </div>
</section>

<style>
  .featured-section {
    text-align: center;
    padding: var(--space-3xl) var(--space-lg);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .featured-section h2 {
    margin-bottom: var(--space-xl);
  }
  
  .featured-menu-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }
  
  .featured-menu-link {
    display: block;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--shadow-medium);
    transition: all var(--transition-smooth);
    max-width: 100%;
  }
  
  .featured-menu-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-strong);
  }
  
  .featured-menu-link img {
    display: block;
    width: 100%;
    height: auto;
  }
  
  .featured-cta {
    font-size: 1.125rem;
    padding: var(--space-lg) var(--space-2xl);
  }
</style>
